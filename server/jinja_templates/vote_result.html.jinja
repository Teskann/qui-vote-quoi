{% from "table_details.html.jinja" import create_table_details %}
{% from "votes_table.html.jinja" import create_votes_table %}

{% macro create_vote_results(eu_document_code, data) %}

<div class="vote_results">

<div class="h2"><a href="{{ data.details.source_url }}">🗳️ {{ eu_document_code }}</a> -
{{ data.details.title | add_flags }}{{ data.details.title }}
</div>

{{ create_votes_table(data.votes) }}
{{ create_table_details(eu_document_code, data.date, data.votes_source_url, data.details.source_url, data.votes["+"] | count_all_votes, data.votes["-"] | count_all_votes, data.votes["0"] | count_all_votes) }}

</div>

{% endmacro %}